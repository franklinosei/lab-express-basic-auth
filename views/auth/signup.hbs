{{! views/auth/signup.hbs }}

<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">

    <label>
      Username
      <input required type="text" name="username" placeholder="kwamenkrumah" />
    </label>

    <label>
      Password
      <input required type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Sign Up</button>

    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
  </form>
</div>